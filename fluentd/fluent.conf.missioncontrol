<filter jfrog.missioncontrol.**.service>
  @type record_transformer
  enable_ruby true
  <record>
    message ${record["message"].gsub(/\e\[([;\d]+)?m/, '')}
  </record>
</filter>
<filter jfrog.missioncontrol.**.service>
  @type parser
  key_name message
  <parse>
      @type multiline
      format_firstline /\d{4}-\d{1,2}-\d{1,2}/
      format1 /^(?<timestamp>[^ ]*) \[(?<service_type>[^\]]*)\] \[(?<log_level>[^\]]*)\] \[(?<trace_id>[^\]]*)\] \[(?<class_line_number>.*)\] \[(?<thread>.*)\] -(?<message>.*)$/
      time_key timestamp
      time_format %Y-%m-%dT%H:%M:%S.%LZ
  </parse>
</filter>
<filter jfrog.**>
  @type record_transformer
  <record>
    hostname "#{Socket.gethostname}"
    log_source ${tag}
  </record>
</filter>

<match jfrog.**>
  @type copy
  <store>
      @type "elasticsearch"
      @id elasticsearch
      host "elasticsearch"
      port 9200
      user "elastic"
      password xxxxxx
      index_name "unified-artifactory"
      include_tag_key true
      type_name "fluentd"
      logstash_format false
  </store>
  <store>
      @type "splunk_hec"
      host "splunk"
      port 8088
      token xxxxxx
      format json
      sourcetype_key "log_source"
      use_fluentd_time false
      flush_interval 10s
      <buffer tag>
        flush_mode interval
        retry_type exponential_backoff
        flush_interval 10s
      </buffer>
      <format>
        @type json
      </format>
  </store>
  <store>
      @type "datadog"
      @id datadog_agent_artifactory
      api_key xxxxxx
      include_tag_key true
      dd_source fluentd
  </store>
</match>